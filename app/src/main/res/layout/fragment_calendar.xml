<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <TextView
        android:id="@+id/tvDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
       android:fontFamily="@font/unbounded"
        android:layout_marginBottom="10dp"/>

    
    <LinearLayout
        android:id="@+id/tabsRow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_calendar_card"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">

        <FrameLayout
            android:id="@+id/tabMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTabMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Month"
                android:textSize="16sp"
                android:textStyle="bold"
               android:fontFamily="@font/unbounded"
                android:textColor="#FC4F08"/>
            <View
                android:id="@+id/indMonth"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="#FC4F08"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tabWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTabWeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Week"
                android:textSize="16sp"
               android:fontFamily="@font/unbounded"
                android:textColor="#9EFFFFFF"/>
            <View
                android:id="@+id/indWeek"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="#FC4F08"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tabYear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTabYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Year"
                android:textSize="16sp"
               android:fontFamily="@font/unbounded"
                android:textColor="#9EFFFFFF"/>
            <View
                android:id="@+id/indYear"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="#FC4F08"/>
        </FrameLayout>
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/monthContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_calendar_card2"
        android:padding="12dp"
        android:orientation="vertical">

        
        <LinearLayout
            android:id="@+id/weekHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:id="@+id/gridMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"/>
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/weekContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_calendar_card2"
        android:padding="12dp"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rowWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/yearContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_calendar_card2"
        android:padding="12dp"
        android:visibility="gone"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"/>
    </LinearLayout>
</LinearLayout>
