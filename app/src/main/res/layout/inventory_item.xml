<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_team_item"
    android:padding="12dp">

    <!-- Item Icon -->
    <ImageView
        android:id="@+id/imgItemIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ball"
        android:background="@drawable/bg_circle"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Item Title -->
    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BALL"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/unbounded"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgItemIcon"
        app:layout_constraintTop_toTopOf="@id/imgItemIcon"
        android:layout_marginStart="12dp"/>

    <!-- Description row -->
    <LinearLayout
        android:id="@+id/descRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tvItemTitle"
        app:layout_constraintTop_toBottomOf="@id/tvItemTitle"
        app:layout_constraintEnd_toStartOf="@id/btnNext">

        <!-- Quantity -->
        <TextView
            android:id="@+id/tvItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/unbounded"/>

        <!-- Dot -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="•"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/unbounded"/>

        <!-- Category -->
        <TextView
            android:id="@+id/tvItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balls"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/unbounded"/>

        <!-- Dot -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="•"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/unbounded"/>

        <!-- Status -->
        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/unbounded"/>
    </LinearLayout>

    <!-- Arrow Button -->
    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/caret_circle_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
