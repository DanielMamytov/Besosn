<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_team_item"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!-- Дата и время -->
    <TextView
        android:id="@+id/tvMatchDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.09.2025 - 22:00"
        android:textColor="#B3FFFFFF"
        android:layout_weight="1"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvMatchScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:0"
            android:layout_weight="1"
            android:gravity="end"
            android:textFontWeight="700"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="30dp"

                android:layout_height="30dp"
                android:background="@drawable/bg_white_circle">

                <ImageView
                    android:id="@+id/imgTeamLogo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:src="@drawable/vdgdsgfds"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <TextView
        android:id="@+id/tvTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="BARCELONA"
        android:textColor="#FEA613"
        android:textSize="16sp"
        android:fontFamily="@font/unbounded"
        android:textStyle="bold"/>
        </LinearLayout>

    <!-- Счет -->
        <TextView
            android:id="@+id/tvDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•"
            android:textColor="#B3FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/unbounded"
            app:layout_constraintStart_toEndOf="@id/tvTeam1"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTeam1"
            android:layout_marginHorizontal="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="30dp"

                android:layout_height="30dp"
                android:background="@drawable/bg_white_circle">

                <ImageView
                    android:id="@+id/imgTeamLogo2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:src="@drawable/jkljfsjfls"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"/>
            </FrameLayout>
        <TextView
            android:id="@+id/tvTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="REAL MADRID"
            android:textColor="#FEA613"

            android:textSize="16sp"
            android:fontFamily="@font/unbounded"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgTeam2"
            app:layout_constraintBaseline_toBaselineOf="@id/imgTeam2"/>
        </LinearLayout>

        <!-- Лого и название первой команды -->


    </LinearLayout>

    <!-- Divider (точка) -->


    <!-- Лого и название второй команды -->

</LinearLayout>
