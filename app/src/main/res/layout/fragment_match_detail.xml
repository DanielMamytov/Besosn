<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_teams_dark"
    tools:context=".presentation.ui.matches.MatchEditFragment">



    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back"

        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="16dp"
        android:elevation="1dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/btn_edit_gradient"
            android:fontFamily="@font/unbounded"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="56dp"
            android:layout_height="56dp"

            android:background="@drawable/btn_delete_gradient"
            android:contentDescription="Delete"
            android:scaleType="centerInside"
            android:src="@drawable/trash_icon" />
    </LinearLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_top_bg"
            android:elevation="1dp"
            android:clipToOutline="true">



            <ImageView
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_bottom_fade"/>


            <!-- Контент поверх -->
            <LinearLayout
                android:id="@+id/conteinter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/firstTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BARCELONA"

                        android:fontFamily="@font/unbounded"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textColor="#FF8B5C"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/secondTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REAL MADRID"
                        android:textSize="20sp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:fontFamily="@font/unbounded"
                        android:textColor="#FF8B5C"/>
                </LinearLayout>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="20dp">

                    <!-- Левая команда -->
                    <ImageView
                        android:id="@+id/team1Logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/fcbarcelona_logo"
                        android:contentDescription="FC Barcelona Logo"
                        android:scaleType="centerCrop"
                        android:layout_gravity="start"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <!-- Счёт - Левая цифра -->
                    <TextView
                        android:id="@+id/team1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#FC4F08"
                        android:textSize="56sp"
                        android:fontFamily="@font/unbounded"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <!-- Разделитель двоеточие -->
                    <TextView
                        android:id="@+id/colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="#FC4F08"
                        android:textSize="56sp"
                        android:fontFamily="@font/unbounded"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <!-- Счёт - Правая цифра -->
                    <TextView
                        android:id="@+id/team2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FC4F08"
                        android:textSize="56sp"
                        android:fontFamily="@font/unbounded"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    </LinearLayout>


                    <!-- Правая команда -->
                    <ImageView
                        android:id="@+id/team2Logo"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/realmadrid_logo"
                        android:contentDescription="Real Madrid Logo"
                        android:scaleType="centerCrop"
                        android:layout_gravity="end"/>

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/teamInfoRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:paddingTop="8dp"
                    >

                    <!-- Column 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barcelona"
                            android:textColor="#FEA613"
                            android:textSize="20sp"
                            android:textFontWeight="700"
                            android:textStyle="bold"
                            android:fontFamily="@font/prompt_regular"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/tvCityLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textColor="#CCFFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/prompt_regular"/>
                    </LinearLayout>

                    <!-- Column 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvFoundedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1908"
                            android:textColor="#FEA613"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/prompt_regular"/>

                        <TextView
                            android:id="@+id/tvFoundedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Founded"
                            android:textColor="#CCFFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/prompt_regular"/>
                    </LinearLayout>





                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#2FFFFFFF"
                    android:paddingHorizontal="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About ball"
                    android:textColor="#FC4F08"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/unbounded"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textAllCaps="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#A2FFFFFF"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    android:layout_height="wrap_content"/>














            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
